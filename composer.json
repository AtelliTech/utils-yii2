{
    "name": "atellitech/utils-yii2",
    "description": "Utilities for Yii2",
    "keywords": ["utilities", "yii2"],
    "license": "MIT",
    "homepage":"https://github.com/AtelliTech/utils-yii2",
    "authors": [
        {
            "name": "Eric Huang",
            "email": "eric.huang@atelli.ai"
        }
    ],
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "yiisoft/yii2": "^2.0",
        "zircote/swagger-php": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "AtelliTech\\Yii2\\Utils\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.54"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "codetest": "php-cs-fixer --config=php_cs.php fix --verbose && phpstan"
    }
}
